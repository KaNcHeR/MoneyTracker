<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_view_layout_height"
    android:layout_margin="@dimen/card_view_layout_margin"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardCornerRadius="@dimen/card_view_cardCornerRadius">

    <RelativeLayout
        style="@style/Container.Formatted">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_item_name"
            android:textSize="@dimen/list_item_text_size"/>

        <TextView
            android:id="@+id/sum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/list_item_sum"
            android:textSize="@dimen/list_item_text_size"
            android:layout_toLeftOf="@+id/date_text"
            android:layout_toStartOf="@+id/date_text"
            android:layout_marginRight="@dimen/list_item_text_view_sum_margin_right"
            android:layout_marginEnd="@dimen/list_item_text_view_sum_margin_end" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/list_item_date"
            android:textSize="@dimen/list_item_text_size"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>