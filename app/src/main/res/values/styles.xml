<resources xmlns:android="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" android:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" android:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Container.MainBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Container.DarkBackground">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="Container.Formatted">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/list_item_card_view_child_relative_layout_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AddExpenseEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="AddExpenseEditText.SpinnerDropDownList">
        <item name="android:paddingTop">@dimen/spinner_inside_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/spinner_inside_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/spinner_inside_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/spinner_inside_padding_horizontal</item>
    </style>

    <style name="AddExpenseTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_input_layout_layout_height_width_error</item>
        <item name="android:layout_marginTop">@dimen/text_input_layout_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/text_input_layout_margin_bottom</item>
        <item name="android:textColorHint">@color/default_hint_color</item>
    </style>

    <style name="AddExpenseSpinner" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/spinner_layout_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/spinner_layout_margin_top</item>
    </style>

    <style name="AddExpenseButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/buttons_layout_height</item>
        <item name="android:minWidth">@dimen/buttons_min_width</item>
        <item name="android:paddingLeft">@dimen/buttons_padding</item>
        <item name="android:paddingStart" android:targetApi="jelly_bean_mr1">@dimen/buttons_padding</item>
        <item name="android:paddingRight">@dimen/buttons_padding</item>
        <item name="android:paddingEnd" android:targetApi="jelly_bean_mr1">@dimen/buttons_padding</item>
        <item name="android:background">@drawable/button_add</item>
        <item name="android:stateListAnimator" android:targetApi="lollipop">@null</item>
        <item name="android:textColor">@drawable/button_add_text_color</item>
    </style>

    <style name="UserRegistrationEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/user_registration_button_text_size</item>
        <item name="android:maxLength">10</item>
        <item name="android:background">@color/edit_text_background</item>
        <item name="android:paddingTop">@dimen/edit_text_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/edit_text_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/edit_text_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/edit_text_padding_horizontal</item>
        <item name="android:layout_marginTop">@dimen/edit_text_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/edit_text_margin_vertical</item>
    </style>

    <style name="UserRegistrationButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/color_text_button</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="QuestionRegistrationTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_button</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:layout_marginTop">@dimen/question_login_registration_margin_top</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_left</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_right</item>
    </style>

</resources>