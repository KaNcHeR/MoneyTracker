<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Container.MainBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Container.DarkBackground">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="Container.Formatted">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/list_item_card_view_child_relative_layout_padding</item>
    </style>

    <style name="AddExpenseTextViewAndEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">fill</item>
    </style>

    <style name="UserRegistrationButton">
        <item name="android:minWidth">@dimen/user_registration_button_min_width</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/user_registration_button_height</item>
        <item name="android:background">@color/button_user_registration</item>
        <item name="android:layout_margin">@dimen/user_registration_button_margin</item>
        <item name="android:paddingLeft">@dimen/user_registration_button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/user_registration_button_padding_left_right</item>
        <item name="android:textColor">@color/user_registration_button_text_color</item>
    </style>



</resources>
